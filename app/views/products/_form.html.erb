<%= form_with(model: product, url: product.new_record? ? store_products_path(product.store) : store_product_path(product.store, product)) do |form| %>
  <div >
    <%= form.label :title, style: "display: block", class: "mb-2" %>
    <%= form.text_field :title, class: "form-control mb-4" %>
  </div>
  <div >
    <%= form.label :price, style: "display: block", class: "mb-2" %>
    <%= form.text_field :price, class: "form-control mb-4" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary mt-2" %>
  </div>
<% end %>
