<%= stylesheet_link_tag 'show_model', media: 'all' %>

<div class="container_show mt-4">
  <div class="container_show_sep">
    <div>
      <h1>Product</h1>
      <p style="color: green"><%= notice %></p>
      <%= render @product %>
    </div>

   <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "container_show_img" %>
    <% else %>
      <img class="container_show_img" src="<%= asset_path 'chef.jpg' %>"/>
    <% end %>

  </div>
    <div>
      <%= link_to "Edit this product", edit_store_product_path(@store, @product) %> |
      <%= link_to "Back to products", store_path(@store) %>
    </div>

    <%= button_to "Destroy this product", store_product_path(@store, @product), method: :delete, class: "btn btn-danger p-1 mb-4 mt-4" %>
</div>

<style>
  main{
    background-image: url('<%= asset_path 'chef.jpg' %>');
  }
</style>
