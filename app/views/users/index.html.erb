<div class="container_users mt-2">
  <h2 class="container_users_title">Users</h2>
  <p style="color: red"> <%= notice %> </p>
  <div class="container_user_table">
    <table class="table p-3 table-bordered border-dark">
      <thead>
        <tr class="row">
          <td class="col-8 px-4">Email</td>
          <td class="col-2">Edit</td>
          <td class="col-2">Delete</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr class="row">
            <td class="col-8 d-flex px-4"><%= link_to user.email, user %></td>
            <td class="col-2 d-flex justify-content-center">
              <%= link_to edit_user_path(user), class: "btn btn-warning p-1" do %>
                <img src="<%= asset_path 'edit.png' %>" alt="Edit" class="container_user_icon edit-icon">
              <% end %>
            </td>
            <td class="col-2 d-flex justify-content-center"><%= button_to user_path(user), method: :delete, class: "btn btn-danger p-1", data: { confirm: "Are you sure?" } do %>
            <%= image_tag("delete.png", alt: "Destroy", class: "container_user_icon destroy-icon") %>
            <% end %>
            </td>
            </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @users %>
  </div>
   <div class="d-flex justify-content-center mb-3">
    <%= link_to "New user", new_user_path %>
  </div>
</div>

<style>
  main{
    background-image: url('<%= asset_path 'chef.jpg' %>');
  }


  .container_user_table{
    margin-left: 1rem;
    margin-right: 1rem;
    width: 500px;
    height: 590px;
  }

  .table-bordered {
    border-radius: 10px;
    overflow: hidden;
  }

  .container_users_title {
    color: #FFFFFF;
  }

  .container_user_icon {
    width: 25px;
  }
</style>
