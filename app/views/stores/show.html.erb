<div class="container_store_show mt-4">
  <div class="container_store_show_sep">
    <div>
      <h1>Store</h1>
      <p style="color: green"><%= notice %></p>
      <%= render @store %>
    </div>
  <img class="container_store_show_img" src="<%= asset_path 'chef.jpg' %>"/>
  </div>
  <div>
    <div>
      <%= link_to "Edit this store", edit_store_path(@store) %> |
      <%= link_to "Back to stores", stores_path %>
    </div>

    <%= button_to "Destroy this store", @store, method: :delete, class: "btn btn-danger p-1 mb-4 mt-4" %>

  <div>
    <h3>Products</h3>

    <div class="container_store_table">
      <table class="table m-0 p-0 table-bordered border-dark">
        <thead>
          <tr class="row">
            <td class="col-6 px-4">Name</td>
            <td class="col-2">Price</td>
            <td class="col-2">Editar</td>
            <td class="col-2">Excluir</td>
          </tr>
        </thead>
        <tbody>
          <% @store.products.each do |product| %>
          <tr class="row">
            <td class="col-6 px-4"><%= link_to product.title, store_product_path(product.store, product) %></td>
            <td class="col-2 d-flex justify-content-center"><%= number_with_precision(product.price, precision: 2) %></td>
            <td class="col-2">
            </td>
            <td class="col-2">
              <%= button_to store_product_path(@store, product), method: :delete, class: "btn btn-danger" do %>
              <%= image_tag("delete.png", alt: "Destroy", class: "container_item_icon destroy-icon") %>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>

<style>
  main{
    justify-content: center;
    background-image: url('<%= asset_path 'chef.jpg' %>');
  }

  .container_store_show{
    display: flex;
    flex-direction: column;
    background-color: rgba(255, 255, 255, 0.7);;
    border-radius: 1rem;
    margin-bottom: 1rem;
    padding: 1rem;
  }

    .table-bordered {
    border-radius: 10px;
    overflow: hidden;
  }

  .container_store_show_img {
    width: 250px;
    border-radius: 1rem;
  }

  .container_store_table{
    margin-left: 1rem;
    margin-right: 1rem;
  }

    .container_item_icon {
    width: 25px;
  }


  @media (min-width:600px){
    .container_store_show{
      width: 800px;
      margin-left: 2rem;
    }

    .container_store_show_sep{
      display: flex;
      justify-content: space-between;
    }

    main{
      justify-content: start;
      }
  }
</style>
