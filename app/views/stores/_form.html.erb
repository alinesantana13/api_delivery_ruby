<%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div >
    <%= form.label :name, style: "display: block", class: "mb-2" %>
    <%= form.text_field :name, class: "form-control mb-4" %>
  </div>

  <% if current_user.admin? %>
  <div class="mb-2">
    <%= form.label :seller, style: "display: block", class: "mb-2" %>
    <%= form.collection_select :user_id, @sellers, :id, :email, prompt: "Sellers..." %>
  </div>
  <% end %>
  
  <div>
    <%= form.submit class: "btn btn-primary mt-2" %>
  </div>
<% end %>
